<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatApp</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.50.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.2/signalr.min.js" integrity="sha512-YXK3VHvk8oUFEYl3/DkoQ8dRIQWl7+igjOu1kW5TWKqdrvxCcQU6XgpzFSNMSO6ectu0EedR0aRcGcDFuW7eCA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Heads", false)
</head>
<body data-theme="winter">

    <div class="mx-auto h-screen grid grid-rows-[max-content_auto_max-content]">
        <header class="bg-base-300 py-6 select-none border-b border-neutral h-[72px]">
            <div class="container mx-auto">
                @User.Identity.Name
            </div>
        </header>
        <main class="bg-base-100 h-full">
            <div class="container mx-auto h-full">
                @RenderBody()
            </div>
        </main>
        <footer class="bg-base-300 py-6 select-none border-t border-neutral h-[72px]">
            <div class="container mx-auto">
                Footer
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>